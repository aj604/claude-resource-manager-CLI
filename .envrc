# Automatically activate Python virtual environment
# This file is used by direnv (install: brew install direnv)
# After creating this file, run: direnv allow

# Activate virtualenv
source .venv/bin/activate

# Set Python path to ensure imports work correctly
export PYTHONPATH="${PWD}/src:${PYTHONPATH}"

# Optional: Set development environment variables
export CLAUDE_ENV=development
export PYTEST_ADDOPTS="-v --tb=short"
